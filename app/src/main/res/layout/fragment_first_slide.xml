<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.FirstSlideFragment"
    android:background="@drawable/first_slide_fragm">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background = "@color/black"
       android:alpha="0.3"/>

   <androidx.cardview.widget.CardView
       android:id="@+id/cardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="500dp"
       android:layout_marginBottom="20dp"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       app:cardCornerRadius="20dp"
       android:background="@color/white">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation = "vertical"
          android:gravity="center"
          android:padding="15dp">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Benvenuto su WeFly!"
             android:textStyle="bold"
             android:textSize="18sp"
             android:gravity="center"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:text = "Sia che tu stia pianificando una vacanza rilassante o un'avventura emozionante, siamo qui per rendere ogni viaggio un'esperienza indimenticabile."
             android:gravity="center"/>


      </LinearLayout>

   </androidx.cardview.widget.CardView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below = "@id/cardView"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_marginTop="10dp">

      <TextView
          android:id="@+id/salta"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Salta"
          android:textStyle="bold"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:layout_weight="1"
          android:gravity="start"/>

      <TextView
          android:id="@+id/avanti"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Avanti"
          android:textStyle="bold"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:layout_weight="1"
          android:gravity="end"/>


   </LinearLayout>



</RelativeLayout>