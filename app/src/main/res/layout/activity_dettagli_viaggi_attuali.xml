<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DettagliActivity">

    <TextView
        android:id="@+id/titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXT 1"
        android:padding="16dp"
        android:elevation="16dp"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titolo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title_image"
                android:layout_width = "match_parent"
                android:layout_height = "200dp"
                android:src="@drawable/background_travel"
                android:scaleType="centerCrop"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/citta_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Città:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/citta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:layout_marginStart="7dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/citta_label"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/nazione_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nazione:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/nazione"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="5dp"/>

                <TextView
                    android:id="@+id/nazione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/partenza_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partenza:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/partenza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/ritorno_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ritorno:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ritorno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/budget_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget per persona: €"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/TipoViaggio_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo di viaggio:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/TipoViaggio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/partecipanti_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partecipanti:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/partecipanti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"/>
                <TextView
                    android:id="@+id/partecipanti_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/affinita_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Affinità:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/affinita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="7dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:id="@+id/descrizione_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrizione:"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/descrizione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXX"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>